<div class="mt-5">
  <a href="/" class="me-3">홈페이지</a>
  <a href="/kakao/book" class="me-3">책</a>
  <a href="/kakao/local" class="me-3">지도</a>
  <a href="/kakao/blog" class="me-3">블로그</a>

  <a id="login" href="/users/login" class="me-3" style="float:right">로그인</a>
  <a id="logout" href="/users/#" class="me-3" style="float:right">로그아웃</a>
  <a id="mypage" href="/users/mypage" class="me-3" style="float:right">마이페이지</a>
  <hr/>
</div>
<script>
    const email=sessionStorage.getItem("email");
    if(email){ // 로그인 상태
      $("#login").hide();
      $("#mypage, #logout").show();
      $("#mypage").html(email);
    }else{ // 로그아웃 상태
      $("#login").show();
      $("#mypage, #logout").hide();
    }

    $("#logout").on("click", function(e){
      e.preventDefault(); // a의 클릭은 
      if(confirm("정말로 로그아웃 하시겠습니까?")){
          // 로그아웃 할때 스토리지 삭제
          sessionStorage.clear(); // 모든 값 삭제
          location.href="/";
      } else{
      }
    })
</script>