<div class="mt-5">
  <a href="/" class="me-3">홈페이지</a>
  <a href="/kakao/book" class="me-3">책</a>
  <a href="/kakao/local" class="me-3">지도</a>
  <a href="/kakao/blog" class="me-3">블로그</a>
  <a id="cart" href="/users/cart" class="me-3">장바구니</a>
  <a id="login" href="/users/login" class="me-3" style="float:right">로그인</a>
  <a id="logout" href="/users/#" class="me-3" style="float:right">로그아웃</a>
  <a id="mypage" href="/users/mypage" class="me-3" style="float:right">마이페이지</a>
  <hr/>
</div>
<script>
    // const로 한 이유는 한번 로그인 되면 로그인값이 변하지 않기 때문. 변하게 할거면 let 사용해야함.
    const email=sessionStorage.getItem("email"); // login.ejs에서 로그인 성공하면 sessionStorage에 넣어서 이걸 가져오는것.
    const uid = sessionStorage.getItem("uid");

    if(email){ // 로그인 상태
      $("#login").hide(); // #은 id로 썻을때, name 은 ""랑 #도 안씀.
      $("#mypage, #logout, #cart").show();
      $("#mypage").html(email);

    }else{ // 로그아웃 상태
      $("#login").show();
      $("#mypage, #logout, #cart").hide();
    }

    $("#logout").on("click", function(e){
      e.preventDefault(); // a는 이동인데 여기서 막기때문에 위에 html 에서 logout의 href는 상관없음
      if(confirm("정말로 로그아웃 하시겠습니까?")){
          // 로그아웃 할때 스토리지 삭제
          sessionStorage.clear(); // 모든 값 삭제
          location.href="/";
      } else{
      }
    })
</script>